generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Operation {
  id      String   @id @default(uuid())
  name    String
  date    DateTime
  status  String
  sellers Seller[]
  orders  Order[]
  sales   Sale[]
}

model Seller {
  id          String     @id @default(uuid())
  name        String
  cpf         String
  Operation   Operation? @relation(fields: [operationId], references: [id])
  operationId String?
  operators   Operator[]
  catalogs    Catalog[]
  orders      Order[]
  sales       Sale[]
}

model Operator {
  id             String           @id @default(uuid())
  name           String
  seller         Seller           @relation(fields: [sellerId], references: [id])
  sellerId       String
  WorkAssignment WorkAssignment[]
  orders         Order[]
  sales          Sale[]
}

model Catalog {
  id             String           @id @default(uuid())
  name           String
  type           String
  seller         Seller           @relation(fields: [sellerId], references: [id])
  sellerId       String
  items          CatalogItem[]
  WorkAssignment WorkAssignment[]
  orders         Order[]
  sales          Sale[]
}

model CatalogItem {
  id        String  @id @default(uuid())
  name      String
  price     Float
  category  String
  catalog   Catalog @relation(fields: [catalogId], references: [id])
  catalogId String
  available Boolean @default(true)
}

model WorkAssignment {
  id         String   @id @default(uuid())
  operator   Operator @relation(fields: [operatorId], references: [id])
  operatorId String
  catalog    Catalog  @relation(fields: [catalogId], references: [id])
  catalogId  String
  role       String
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

model Order {
  id          String      @id @default(uuid())
  operationId String
  sellerId    String
  catalogId   String
  operatorId  String
  items       Json // Lista de SaleItem (JSON)
  total       Float
  createdAt   DateTime    @default(now())
  paidAt      DateTime?
  status      OrderStatus @default(PENDING)

  operation Operation @relation(fields: [operationId], references: [id])
  seller    Seller    @relation(fields: [sellerId], references: [id])
  catalog   Catalog   @relation(fields: [catalogId], references: [id])
  operator  Operator  @relation(fields: [operatorId], references: [id])
  sales     Sale[] // 1:N com Sale
}

model Sale {
  id          String   @id @default(uuid())
  operationId String
  sellerId    String
  catalogId   String
  operatorId  String
  orderId     String
  items       Json // Lista de SaleItem (JSON)
  total       Float
  createdAt   DateTime @default(now())

  operation Operation @relation(fields: [operationId], references: [id])
  seller    Seller    @relation(fields: [sellerId], references: [id])
  catalog   Catalog   @relation(fields: [catalogId], references: [id])
  operator  Operator  @relation(fields: [operatorId], references: [id])
  order     Order     @relation(fields: [orderId], references: [id])
}
