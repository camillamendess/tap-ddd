generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Operation {
  id      String   @id @default(uuid())
  name    String
  date    DateTime
  status  String
  sellers Seller[]
}

model Seller {
  id          String     @id @default(uuid())
  name        String
  cpf         String
  Operation   Operation? @relation(fields: [operationId], references: [id])
  operationId String?
  operators   Operator[]
  catalogs    Catalog[]
}

model Operator {
  id             String           @id @default(uuid())
  name           String
  seller         Seller           @relation(fields: [sellerId], references: [id])
  sellerId       String
  WorkAssignment WorkAssignment[]
}

model Catalog {
  id             String           @id @default(uuid())
  name           String
  type           String
  seller         Seller           @relation(fields: [sellerId], references: [id])
  sellerId       String
  items          CatalogItem[]
  WorkAssignment WorkAssignment[]
}

model CatalogItem {
  id        String  @id @default(uuid())
  name      String
  price     Float
  category  String
  catalog   Catalog @relation(fields: [catalogId], references: [id])
  catalogId String
}

model WorkAssignment {
  id         String   @id @default(uuid())
  operator   Operator @relation(fields: [operatorId], references: [id])
  operatorId String
  catalog    Catalog  @relation(fields: [catalogId], references: [id])
  catalogId  String
  role       String
}
